@{
  Layout = "_Layout";
}

@model SweetTreats.Models.Flavor

<h2>Flavor Details</h2>
<hr>
<h3>Flavor Name: @Html.DisplayFor(model => model.Name)</h3>

@if(@Model.Treats.Count == 0)
{
  <p>This Flavor Has not been asigned any Treats yet.</p>
}
else
{
  <h4>Treats:</h4>
  <ul>
    @foreach (var join in Model.Treats)
    {
      <li>@join.Treat.Name</li>
    }
  </ul>
}

<p>@Html.ActionLink("Back to list of flavors", "Index")</p>
<p>@Html.ActionLink("Edit Details", "Edit", new { id = Model.FlavorId})</p>
<p>@Html.ActionLink("Home", "Index", "Home")</p>